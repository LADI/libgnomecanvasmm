namespace Gnome
{

void 
CanvasGroup::child_bounds(CanvasItem *item)
{
  gnome_canvas_group_child_bounds(gobj(),item->gobj());
}

CanvasGroup::CanvasGroup(const CanvasGroup &parentx,
				     double x, double y)
   : CanvasItem(GNOME_CANVAS_ITEM(g_object_new(get_type(),0)))
{
  initialize_class();
  item_construct(parentx);
  set("x",x,"y",y,0);
}

} /* namespace Gnome */
