#include <libgnomecanvasmm/canvas-item.h>
#m4 include(property.m4)

namespace Gnome
{;
class Canvas;

class CanvasGroup : public CanvasItem
{
  _CLASS_GTKOBJECT(CanvasGroup, GnomeCanvasGroup,
             GNOME_CANVAS_GROUP, GNOME_IS_CANVAS_GROUP,
             canvas_group,
             CanvasItem, GnomeCanvasItem, GNOME_CANVAS_ITEM);
public:
  _CTOR_DEFAULT;
  _CTOR_CAST;
  _DTOR;
  
  friend class Canvas;
  CanvasGroup(const CanvasGroup &parent,
		    double x=0, double y=0);


  void child_bounds(CanvasItem *item);

  CANVAS_PROPERTY(x,x,double,double,double,double,double_data)   
  CANVAS_PROPERTY(y,y,double,double,double,double,double_data)   

};

PRIVATE_START;
#include <libgnomecanvasmm/private/canvas-item_p.h>
IMPL_START;
