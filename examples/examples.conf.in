SHELL = @SHELL@
CFLAGS = @CFLAGS@
CPPFLAGS = @CPPFLAGS@ 
CXXFLAGS = @CFLAGS@ @LIBGNOMECANVASMM_CFLAGS@
LIBS = @LIBS@ -lgnomecanvasmm-1.3 @LIBGNOMECANVASMM_LIBS@
CXX = @CXX@
CXXLD = @CXX@
LIBTOOL = @LIBTOOL@
top_builddir = ../..

INCLUDES = -I ../.. -I . -I ../../libgnomecanvas $(CXXFLAGS)
LDFLAGS = -L../../libgnomecanvas/libgnomecanvasmm

CXXCOMPILE = $(LIBTOOL) --mode=compile $(CXX) $(CXXFLAGS) $(INCLUDES) -c $<
CXXLINK = $(LIBTOOL) --mode=link $(CXXLD) $(CXXFLAGS) $(LDFLAGS) -o $@ 

# compile and link for simple files
CXXBUILD =  \
        $(CXXCOMPILE) ; \
        $(CXXLINK) $@.lo $(LIBS)



