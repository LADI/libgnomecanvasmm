SHELL = @SHELL@
CFLAGS = @CFLAGS@
CPPFLAGS = @CPPFLAGS@
CXXFLAGS = @CXXFLAGS@
CXX = @CXX@
CXXLD = @CXX@
LIBTOOL = @LIBTOOL@

# Base dependencies from configure.in:
LIBGNOMECANVASMM_LIBS = @LIBGNOMECANVASMM_LIBS@
LIBGNOMECANVASMM_CFLAGS = @LIBGNOMECANVASMM_CFLAGS@

LOCAL_LIBGNOMECANVASMM_LIB = ../../libgnomecanvas/libgnomecanvasmm/libgnomecanvasmm-1.3.la

top_builddir = ../..

LIBS = $(LOCAL_LIBGNOMECANVASMM_LIB) $(LIBGNOMECANVASMM_LIBS)
INCLUDES = -I ../.. -I . -I ../../libgnomecanvas -I ../../src $(CXX_FLAGS) $(LIBGNOMECANVASMM_CFLAGS)

CXXCOMPILE = $(LIBTOOL) --mode=compile $(CXX) $(CXXFLAGS) $(INCLUDES)
CXXLINK = $(LIBTOOL) --mode=link $(CXXLD) $(CXXFLAGS) $(LDFLAGS) -o $@

# compile and link for simple files
CXXBUILD =  \
        $(CXXCOMPILE) -c  $< ; \
        $(CXXLINK) $@.lo $(LIBS)

